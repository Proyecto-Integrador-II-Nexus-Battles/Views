<script>
    document.addEventListener("DOMContentLoaded", function() {
        const cantidadElements = document.querySelectorAll('.cantidad');

        cantidadElements.forEach(cantidadElement => {
            const cantidadParagraph = cantidadElement.querySelector('p');
            const menosButton = cantidadElement.querySelector('.masmenos-menos');
            const masButton = cantidadElement.querySelector('.masmenos-mas');

            menosButton.addEventListener('click', function() {
                let cantidad = parseInt(cantidadParagraph.textContent);
                if (cantidad > 0) {
                    cantidad--;
                    cantidadParagraph.textContent = cantidad;
                    actualizarCantidad(cantidadElement, cantidad);
                }
            });

            masButton.addEventListener('click', function() {
                let cantidad = parseInt(cantidadParagraph.textContent);
                cantidad++;
                cantidadParagraph.textContent = cantidad;
                actualizarCantidad(cantidadElement, cantidad);
            });
        });

        function actualizarCantidad(cantidadElement, cantidad) {
            const IdCard = cantidadElement.querySelector('.masmenos-menos').dataset.cartaid;
            axios.post('http://localhost:4000/carro_compras/ADD-CARD', { IdCard, Cantidad: cantidad })
                .then(response => {
                    console.log(response.data.message); // Mensaje de éxito desde el servidor
                })
                .catch(error => {
                    console.error('Error al actualizar la cantidad:', error);
                    // Aquí puedes manejar el error de acuerdo a tus necesidades
                });
        }
    });
</script>



                            
                            
