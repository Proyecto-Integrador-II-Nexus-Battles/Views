<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carta a Subastar</title>
  <link rel="stylesheet" href="/subasta/css/valorCarta.css">
  <link rel="stylesheet" href="/templates/css/navbarFeatureCSS.css">
  <link rel="stylesheet" href="/resumen_flotante/css/style.css">
</head>

<body>
  <header>
    <nav>
      <%- include('../../templates/navbarEcommerce'); %>
    </nav>
  </header>

  <main>
  <div class="container">
    <div class="left-side">
      <div class="row1">
        <div class="subrow1">
          <h3 style="color: white;">MI BANCO</h3>
          <form action="" class="form-search" role="search">
            <input class="search_input" type="search" placeholder="Search" maxlength="35" onkeydown="filtrarPorBusqueda(event)">
          </form>
          <div class="paginas">
            <ul class="listPageBanco"> 
            </ul>
          </div>
        </div>
        <%- include('../../templates/cartas_banco', {datos: banco}); %>
      </div>
    </div>
    <div class="right-side">
      <div class="row1">
        <div class="subrow1">
          <h3 style="color: white;">INVENTARIO</h3>
          <form action="" class="form-search" role="search">
            <input class="search_input" type="search" placeholder="Search" maxlength="35" onkeydown="filtrarPorBusqueda(event)">
          </form>
          <div class="paginas">
            <ul class="listPageInventario"> 
              
            </ul>
          

          </div>
          <h3 style="color: white" id="mensajeCarta">Selecciona tus cartas mínimas</h3 >
          <button id="bontonConfirmarCartas" onclick="confirmarCarta()">Confirmar cartas</button>
        </div>
        <%- include('../../templates/cartas', {datos: inventario}); %>
      </div>
    </div>
  </div>
  <div class="container-2">
    <input id="creditosMinimos" type="text" placeholder="Créditos Mínimos">
    <input id="creditosMaximos" type="text" placeholder="Créditos Máximos">
    <select name="tiempo" id="tiempo-creditos">
      <option value="24">24 horas x 1 crédito</option>
      <option value="48">48 horas x 3 crédito</option>
    </select>
    <button onclick="enviarSubasta()">ENVIAR SUBASTA</button>
  </div>
</main>


  <script src="/js/redirects.js"></script>
  <script src="/lista_deseos/js/enviar.js"></script>
  <script src="/lista_deseos/js/eliminar.js"></script>
  <script src="/subasta/js/paginacionVentaCarta.js"></script>
  <script src="/lista_deseos/js/jugarOnline.js"></script>
  <script src="/lista_deseos/js/hamburguer.js"></script>
  <script src="js/enviar.js"></script>
  <script src="js/eliminar.js"></script>
  <script src="/subasta/js/valorCartas.js"></script>
  <script src="js/jugarOnline.js"></script>
  <script src="/vitrina_productos/js/filtrarCartas.js"></script>
</body>

</html>