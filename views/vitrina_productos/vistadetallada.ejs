      case "Fuego": %>
        <p id="cart"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Buff:</b><%= carta.DamageBuff %></p>
        <p><b>Descripción:</b> <%= carta.description %></p>
        <% break;
      case "Armas": %>
        <p id="cart"><b>Poder:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Vida:</b> <%= carta.LiveNerf %></p>
        <p><b>Descripción:</b> <%= carta.description %></p>
        <% break;
    } %>
  <% } else if (carta.TypeCard === "Armor") { %>
