  <p><b>Descripción:</b> <%= datos[i].descripcion %></p> -->
  <p> <b>Nombre:</b> <%= carta.Name %></p>
  <% if (carta.TypeCard === "Hero") { %>
    <p><b>Poder:</b> <%= carta.Power %></p>
    <p><b>Vida:</b> <%= carta.Live %></p>
    <p><b>Defensa:</b> <%= carta.Defense %></p>
    <p><b>Ataque</b>: <%= carta.AttackBase %></p>
    <p><b>Daño:</b> <%= carta.DamageSides %></p>
  <% } else if (carta.TypeCard === "Item") { %>
    <% switch (carta.Subtype) {
      case "Tanque": %>
        <p id="cart"><b>Buff:</b> <%= carta.DamageXBurst %></p>
        <p id="cart2"><b>Poder:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Veneno": %>
        <p id="cart"><b>Buff:</b> <%= carta.EnemyDamageNerf %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Hielo":
      case "Fuego": %>
        <p id="cart"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Buff:</b><%= carta.DamageBuff %></p>
        <% break;
      case "Armas": %>
        <p id="cart"><b>Poder:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Vida:</b> <%= carta.LiveNerf %></p>
        <% break;
    } %>
  <% } else if (carta.TypeCard === "Armor") { %>
    <% switch (carta.Subtype) {
      case "Tanque": %>
        <p id="cart"><b>Buff:</b> <%= carta.DefenseBuff %></p>
        <p id="cart2"><b>Poder:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Veneno": %>
        <p id="cart"><b>Buff:</b> <%= carta.DefenseBuff %></p>
        <p id="cart2"><b>Buff:</b>  <%= carta.DamageBuff %></p>
        <% break;
      case "Hielo": %>
        <p id="cart"><b>Buff:</b> <%= carta.DefenseBuff %></p>
        <p id="cart2"><b>Buff:</b>  <%= carta.DamageBuff %></p>
        <% break;
      case "Fuego": %>
        <p id="cart"><b>Buff:</b>  <%= carta.DefenseBuff %></p>
        <p id="cart2"><b>Buff:</b>  <%= carta.DamageBuff %></p>
        <% break;
      case "Armas": %>
        <p id="cart"><b>Poder:</b> <%= carta.DefenseBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
    } %>
  <% } else if (carta.TypeCard === "Weapon") { %>
    <% switch (carta.Subtype) {
      case "Tanque": %>
        <p id="cart"><b>Buff:</b> <%= carta.AttackBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Veneno": %>
        <p id="cart"><b>Buff:</b><%= carta.DamageBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Hielo": %>
        <p id="cart"><b>Buff:</b> <%= carta.EnemyDamageNerf %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Fuego": %>
        <p id="cart"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Armas": %>
        <p id="cart"><b>Poder:</b><%= carta.AttackBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
      case "Machete": %>
        <p id="cart"><b>Poder:</b> <%= carta.DamageBuff %></p>
        <p id="cart2"><b>Buff:</b> <%= carta.DamageBuff %></p>
        <% break;
    } %>
  <% } %>
  <% } %>

