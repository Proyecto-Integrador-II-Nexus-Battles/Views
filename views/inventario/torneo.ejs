<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/inventario/css/torneo.css" />
  <title>Mi cuenta</title>
</head>

<body>
  <!-- Header -->
  <header>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var token = localStorage.getItem('token');

        if (token !== null) {
          document.querySelector('.login_btn').textContent = 'Cerrar Sesión';
          document.getElementById('register_btn').remove();
          document.querySelector('.login_btn').addEventListener('click', function() {
            localStorage.removeItem('token');
            window.location.reload(true);
          });
        } else {
          console.log('Not logged in');
        }
      });
    </script>
    <section class="nav">
      <a href="/">
        <img src="/inventario/imagenes/logo_nb2_v2.png" class="logo_img" alt="" />
      </a>

      <!-- Barra de navegación -->
      <img src="/inventario/imagenes/hamburguer_icon.svg" class="abrir-btn" alt="" />
      <nav class="" id="navbar">
        <ul class="opciones">
          <li><a href="#" onclick="miCuenta()">Mi cuenta</a></li>
          <li><a href="#">Mi banco</a></li>
          <li><a href="/subasta">Subasta</a></li>
          <li>
            <a href="/jugarOnline" onclick="jugar_online()">Jugar online</a>
          </li>
          <li><a href="/torneo">Torneo</a></li>
          <li><a id="mostrar-resumen-flotante">Resumen Flotante</a></li>
          <li><a onclick="redirectListaDeseos()" id="lista-deseos">Lista Deseos</a></li>
          <li><a href="/login"><button id="login_btn" class="login_btn">Login</button></a></li>
        </ul>
      </nav>
    </section>
  </header>
  <main>
    <section class="container_general">
      <article>
        <div class="card">
          <div class="capa-opaca"></div>
          <img src="/inventario/imagenes/inscripcion.png" class="personaje" id="imagen">
          <h2 class="texto"> INSRIPCIÓN</h2>
        </div>
        <div class="card">
          <div class="capa-opaca"></div>
          <img src="/inventario/imagenes/consulta.png" class="personaje" id="imagen">
          <h2 class="texto"> CONSULTA <br> EQUIPOS</h2>
        </div>
      </article>
      <article class="contenedor-intermedio">
        <p class="texto-arriba"> TORNEO</p>
        <img src="/inventario/imagenes/logo.png" class="imagen-medio" id="imagen">
      </article>
      <article>
        <div class="card">
          <div class="capa-opaca"></div>
          <img src="/inventario/imagenes/participa.png" class="personaje" id="imagen">
          <h2 class="texto"> PARTICIPA</h2>
        </div>
        <div class="card">
          <div class="capa-opaca"></div>
          <img src="/inventario/imagenes/stream.png" class="personaje" id="imagen">
          <h2 class="texto"> LIVE-STREAM</h2>
        </div>
      </article>
    </section>
    <div id="resumen-flotante" class="resumen-flotante-oculto"></div>

  </main>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/carro_compras/js/resumen_flotante.js"></script>
  <script src="/resumen_flotante/js/deployResumen.js"></script>
  <script src="/js/redirects.js"></script>
  <script src="/inventario/js/nav.js"></script>
  <script src="/inventario/js/creacion.js"></script>
  <script src="/inventario/js/index.js" type="module"></script>
</body>

