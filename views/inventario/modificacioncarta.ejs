<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/inventario/css/modificacion_inventario.css">
  <link rel="icon" href="/img/icon.png" type="image/x-icon">
  <title>Inventario</title>
</head>

<body>
  <header>
    <img src="/inventario/imagenes/logo_nb2_v2.png" class="logo_img" alt="">
    <!-- Barra de navegación -->
    <img src="/inventario/imagenes/hamburguer_icon.svg" class="abrir-btn" alt="">
    <nav class="" id="navbar">
      <ul class="opciones">
        <li><a href="#" onclick="index()">Creación cartas</a></li>
        <li><a href="#" onclick="miCuenta()">Mi cuenta</a></li>
        <li><a href="#">Mi banco</a></li>
        <li><a href="#">Subasta</a></li>
        <li><a href="/jugarOnline" onclick="jugar_online()">Jugar online</a></li>
        <li><a href="#">Torneo</a></li>
        <li><a href="#">Resumen Flotante</a></li>
        <li><a href="#">Lista Deseos</a></li>
        <li><a href="#"><button class="login_btn">Login</button></a></li>
      </ul>
    </nav>
  </header>
  <main>
    <!-- Cartas -->
    <% const carta = datos[0]  %>



    <div class="container_productos">
      <div class="card" id="">
        <input type="hidden" id="cardId" value="<%= carta._id %>">
        <input type="hidden" id="cardType" value="<%= carta.TypeCard %>">
        <div class="imagen_carta">
          <img src="<%= carta.imagePath %>" class="personaje" id="imagen">
          <input type="file" name="pic" id="pic" accept="imagen">
        </div>

        <div class="informacion_carta">
          <div class="nombre">
            <p>Nombre:</p>
            <input type="text" name="" id="Name" placeholder="<%= carta.Name %>">
          </div>
          <% if (carta.TypeCard === 'Hero') { %>
          <div class="nombre">
            <p>Poder:</p>
            <input type="text" name="" id="HPower" placeholder="<%= carta.Power %>">
          </div>
          <div class="nombre">
            <p>Vida:</p>
            <input type="text" name="" id="HLive" placeholder="<%=carta.Live%>">
          </div>
          <div class="nombre">
            <p>Defensa:</p>
            <input type="text" name="" id="HDefense" placeholder="<%=carta.Defense%>">
          </div>
          <div class="nombre">
            <p>Ataque:</p>
            <input type="text" name="" id="HAttackBase" placeholder="<%=carta.AttackBase%>">
          </div>
          <div class="nombre">
            <p>Daño:</p>
            <input type="text" name="" id="HDamageSides" placeholder="<%=carta.DamageSides%>">
          </div>
          <% } else {%>
            <% if (carta.TypeCard === 'Item') { %>
              <div class="nombre">
                <p>Buff de daño:</p>
                <input type="text" name="" id="IDamageBuff" class="opcion" placeholder="<%= carta.DamageBuff %>">
              </div>
              <div class="nombre">
                <p>Debuff de daño:</p>
                <input type="text" name="" id="IEnemyDamageNerf" class="opcion" placeholder="<%= carta.EnemyDamageNerf %>">
              </div>

            <% } else if (carta.TypeCard === 'Armor') { %>
              <div class="nombre">
                <p>Buff defensivo:</p>
                <input type="text" name="" id="ADefenseBuff" class="opcion" placeholder="<%= carta.DefenseBuff %>">
              </div>
            <% } else if (carta.TypeCard === 'Weapon') { %>
              <div class="nombre">
                <p>Ataque:</p>
                <input type="text" name="" id="WAttackBuff" class="opcion" placeholder="<%= carta.AttackBuff %>">
              </div>
              <div class="nombre">
                <p>Daño:</p>
                <input type="text" name="" id="WDamageBuff" class="opcion" placeholder="<%= carta.DamageBuff %>">
              </div>
              <div class="nombre">
                <p>Defensa:</p>
                <input type="text" name="" id="WDefenseBuff" class="opcion" placeholder="<%= carta.DefenseBuff %>">
              </div>
              <div class="nombre">
                <p>Daño enemigo:</p>
                <input type="text" name="" id="WEnemyDamageNerf" class="opcion" placeholder="<%= carta.EnemyDamageNerf %>">
              </div>
            <% } else if (carta.TypeCard === 'Talent') {%>
              <div class="nombre">
                <p>Buff de vida:</p>
                <input type="text" name="" id="TNormalLiveBuff" class="opcion" placeholder="<%= carta.NormalLiveBuff %>">
              </div>
              <div class="nombre">
                <p>Buff de daño:</p>
                <input type="text" name="" id="TEspecialDamageBuff" class="opcion" placeholder="<%= carta.EspecialDamageBuff %>">
              </div>
            <% } %>
          <% } %>
        </div>

      </div>

      <div class="card">
        <div class="informacion_carta">
          <h2>
            Descripcion:
          </h2>
          <div class="textarea-container">
            <textarea name="" id="" cols="45" rows="23">
                <%=carta.Description%>
            </textarea>
          </div>
          <div class="container-buttons">
            <a href="/inventario" onclick="navRouter()">
              <button id="guardar-cambios" class="guardar-cambios" >
                Guardar Cambios
              </button>
            </a>
          </div>
        </div>
      </div>
  </main>
  <script src="/inventario/js/modificacionInv.js"></script>
  <script src="/inventario/js/index.js"></script>
  <script src="/inventario/js/miCuenta.js"></script>
</body>

</html>