<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventario</title>
  <link rel="stylesheet" href="/inventario/css/e-commerce.css">
</head>

<body>
  <!-- Header -->
  <header>
    <section class="nav">
      <img src="/inventario/imagenes/logo_nb2_v2.png" class="logo_img" alt="">
      <!-- Barra de navegación -->
      <img src="/inventario/imagenes/hamburguer_icon.svg" class="abrir-btn" alt="">
      <nav class="" id="navbar">
        <ul class="opciones">
          <li><a href="#" onclick="miCuenta()">Mi cuenta</a></li>
          <li><a href="#">Mi banco</a></li>
          <li><a href="#">Subasta</a></li>
          <li><a href="/jugarOnline" onclick="jugarOnline()">Jugar online</a></li>
          <li><a href="#">Torneo</a></li>
          <li><a href="#">Resumen Flotante</a></li>
          <li><a href="#">Lista Deseos</a></li>
          <li class="cerrar-sesion"><a href="#"><button id="login_btn">Cerrar Sesión</button></a></li>
        </ul>
      </nav>
    </section>
  </header>
  <!-- Vitrina de productos -->
  <main>    
    
<!-- Cartas -->

      <div class="container_general">
        <button class="agregar" onclick="a()">Agregar Carta</button>
        <div class="list">
          <% 
          for (var i = 0; i < datos.length; i++) { 
            let carta = datos[i];
            let imagen;
            let tipoIcono;
          
            switch (carta.Subtype + carta.TypeCard) {
              case "Armas" + "Hero":
                imagen = "/inventario/imagenes/espadas.png";
                tipoIcono = "foto";
                break;
              case "Tanque" + "Hero":
                imagen = "/inventario/imagenes/blindaje.png";
                tipoIcono = "foto";
                break;
              case "Fuego" + "Hero":
                imagen = "/inventario/imagenes/Fuego.png";
                tipoIcono = "foto";
                break;
              case "Hielo" + "Hero":
                imagen = "/inventario/imagenes/hielo.png";
                tipoIcono = "foto";
                break;
              case "Veneno" + "Hero":
                imagen = "/inventario/imagenes/veneno.png";
                tipoIcono = "foto";
                break;
              case "Machete" + "Hero":
                imagen = "/inventario/imagenes/machete.png";
                tipoIcono = "foto";
                break;
                <!-- Items -->
                case "Armas" + "Item":
                imagen = "/inventario/imagenes/espadas.png";
                tipoIcono = "foto";
                break;
              case "Tanque" + "Item":
                imagen = "/inventario/imagenes/blindaje.png";
                tipoIcono = "foto";
                break;
              case "Fuego" + "Item":
                imagen = "/inventario/imagenes/Fuego.png";
                tipoIcono = "foto";
                break;
              case "Hielo" + "Item":
                imagen = "/inventario/imagenes/hielo.png";
                tipoIcono = "foto";
                break;
              case "Veneno" + "Item":
                imagen = "/inventario/imagenes/veneno.png";
                tipoIcono = "foto";
                break;
              case "Machete" + "Item":
                imagen = "/inventario/imagenes/machete.png";
                tipoIcono = "foto";
                break;
              <!-- default:
                imagen = "/default-image.png"; // Ruta de imagen predeterminada en caso de que no coincida ningún tipo
                tipoIcono = "heroe"; // Puedes cambiar esto si quieres otro valor predeterminado -->
            }
          %>
          
          <div class="card">
            <div class="imagen_carta">
              <img src="<%= carta.imagePath %>" class="personaje" />
            </div>
            <div class="informacion_carta">
              <div id="nombre">
                <p><%= carta.Name %></p>
                <img src="<%= imagen %>" class="<%= tipoIcono %>" />
              </div>
              <% if ( carta.TypeCard === "Hero") { %>
                <p>Poder: <%= carta.Power %></p>
                <p>Vida: <%= carta.Live %></p>
                <p>Defensa: <%= carta.Defense %></p>
                <p>Ataque: <%= carta.AttackBase %></p>
                <p>Daño: <%= carta.DamageSides %></p>
              <% }else if (carta.TypeCard === "Item" && carta.Subtype === "Tanque") { %>
                <p>Buff: <%= carta.DamageXBurst %></p>
              <% } else if (carta.TypeCard === "Item" && carta.Subtype === "Veneno") { %>
                <p>Buff: <%= carta.EnemyDamageNerf %></p>
              <% }else if (carta.TypeCard === "Item" && carta.Subtype === "Hielo" && carta.Subtype === "Fuego") { %>
                <p>Buff: <%= carta.DamageBuff %></p>
              <% }else if (carta.TypeCard === "Item" && carta.Subtyp === "Armas") { %>
                <p>Poder: <%= carta.DamageBuff %></p>
                <p>Vida: <%= carta.LiveNerf %></p>
              <% } %>
              <div class="botones">
                <div class="modificar">
                  <button>Suspender</button>
                  <button onclick="modificacionCarta()">Modificar</button>
                </div>
              </div>
            </div>
          </div>
          
          <% } %>
<div class="paginas">
        <ul class="listPage">
            <li class="active">1</li>
            <li>2</li>
            <li>3</li>
        </ul>
      </div>
        </div> 
        
     
      </div>
  
      </div>
    </div>
      <div class="wrapper" id="modal-toast">
        <div class="toast">
          <div class="content">
            <div class="details">
              <span>ALERTA!</span>
              <p>Cambios correctamente realizados</p>
            </div>
          </div>
        </div>
    </div>
  </main>
  <script src="/inventario/js/nav.js"></script>
  <script src="/inventario/js/vistaCrea.js"></script>
  <script src="/inventario/js/paginacion.js"></script>
  <script src="/inventario/js/miCuenta.js"></script>
  <script src="/inventario/js/modificacionInv.js"></script>
  <script src="/inventario/js/index.js" type="module"></script>
  <script src="/inventario/js/jugarOnline.js"></script>
</body>
</html>
